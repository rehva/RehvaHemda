}
@{string height = "550px";}
@for (int i = 0; i < Model.Count(); i++)
{
    
      
      if((i+1) % 2 == 0)
    {

        height = "550px";
    }
    else
    {
      
        height = "150px";
    }
       
    

<div class="clanak-wraper" style="height:@height">
<div class="clanak-naslov">


